---
import "../style.css"

---

<header>
    <div id="header_indhold">
        <div>
            <a href="/"><img id="logo" src="/Logo_Badge_new.png" alt="Demon Daycare Logo" /></a>
        </div>
        <div></div>
        <div>
            <nav>
                <ul>
                    <li><a class="a_underline" href="/">Home</a></li>
                <li><a class="a_underline" href="/contact">Contact</a></li>
                </ul>
            </nav>
        </div>
    </div>
</header>

  <style>
    #header_indhold {
      padding: 10px;
      display: grid;
      grid-template-columns: 1fr 6fr 1fr;
      align-items: center;
      position: relative;
      z-index: 20;
    }
    header {
      position: relative;
    }
    ul {
      display: flex;
      justify-self: end;
      margin-left: auto;
    }
    li {
      list-style: none;
    }
    #logo,
    nav {
      flex: 1;
      justify-self: end;
    }

    #logo {
        aspect-ratio: 225/123;
        width: 200%;
        height: 200%;
    }
    a {
      text-decoration: none;
      color: var(--blue);
      font-size: 1.5rem;
    }
    .a_underline:hover {
      position: relative;
      color: var(--yellow);
    }
    /*********** DROP DOWN ***********/
    /* The container <div> - needed to position the dropdown content */
    .dropcontainer {
      position: relative;
      display: inline-block;
    }
    /* Dropdown Content (Hidden by Default) */
    .dropcontent {
      display: none;
      position: absolute;
      background-color: var(--background_light);
      min-width: 160px;
      box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
      z-index: 1;
      border-radius: 0 0 25px 25px;
      margin-top: 12px;
      text-align: center;
      left: -100%;
    }
    /* Links inside the dropdown */
    .dropcontent a {
      padding: 12px 16px;
      text-decoration: none;
      display: block;
    }
    /* Change color of dropcontainer links on hover */
    .dropcontent a:hover {
      text-decoration: underline;
    }
  
    /* Show the dropcontainer menu on hover */
    .dropcontainer:hover .dropcontent {
      display: block;
    }
  
    /*********** MEDIA QUERY ***********/
    @media (max-width: 1100px) {
      .dropcontent {
        left: auto;
    right: -100%; /* Adjust the distance from the parent */
      }
    }
    @media (min-width: 1100px) {
      .dropcontent {
        margin-left: -45px;
      }
      #header_indhold {
        padding: 30px 90px 30px 90px;
      }
      #logo{
          aspect-ratio: 225/123;
          width: 100%;
          height: 100%;
      }
    }
  </style>
  
  <!-- BURGER MENU -->
  <script src="../js/menu.js"></script>