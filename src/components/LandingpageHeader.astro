          <div class="off-screen-menu">
            <ul>
              <li><a href="/DemonDaycareNew/">Home</a></li>
              <li><a href="/DemonDaycareNew/contact">Contact</a></li>
            </ul>
          </div>
      
          <nav>
            <div class="ham-menu">
              <span></span>
              <span></span>
              <span></span>
            </div>
          </nav>
      
        </div>
    </div>
<br>
    <div class={`flex_vertical landingpage_text ${variant}`}>
        <h1 class="landingpage_spacer">{header}</h1>
        <h3 class="text_spacer">{text}</h3>
        <h3 class="text_spacer">{text2}</h3>
            <slot />
        </div>
</header>
<!-- BURGER MENU NY -->
  <style>
    #header_indhold {
      padding: 10px;
      display: grid;
      grid-template-columns: 1fr 6fr 1fr;
      align-items: center;
      position: relative;
      z-index: 20;
    }
    .landingpage_spacer{
      margin-top: 10vh;
    }
    header {
      position: relative;
    }
    ul {
      margin-right: 20px;
      text-align: left;
    }
    li {
      list-style: none;
    }
    .text_spacer{
      margin-top: 5px;
    }
    #logo,
    nav {
      flex: 1;
      justify-self: end;
    }

    #logo {
        aspect-ratio: 225/123;
        width: 200%;
        height: 200%;
    }
    a {
      text-decoration: none;
      color: white;
      font-size: 1.5rem;
    }
    .a_underline:hover {
      position: relative;
      color: var(--yellow);
    }
    /*********** DROP DOWN ***********/
    /* The container <div> - needed to position the dropdown content */
    .dropcontainer {
      position: relative;
      display: inline-block;
    }
    /* Dropdown Content (Hidden by Default) */
    .dropcontent {
      display: none;
      position: absolute;
      background-color: var(--background_light);
      min-width: 160px;
      box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
      z-index: 1;
      border-radius: 0 0 25px 25px;
      margin-top: 12px;
      text-align: center;
      left: -100%;
    }
    /* Links inside the dropdown */
    .dropcontent a {
      padding: 12px 16px;
      text-decoration: none;
      display: block;
    }
    /* Change color of dropcontainer links on hover */
    .dropcontent a:hover {
      text-decoration: underline;
    }
  
    /* Show the dropcontainer menu on hover */
    .dropcontainer:hover .dropcontent {
      display: block;
    }

    /*********** MEDIA QUERY ***********/
    @media (max-width: 1100px) {
      .dropcontent {
        left: auto;
    right: -100%; /* Adjust the distance from the parent */
      }
      .landingpage_spacer{
      margin-top: 5vh;
    }

    }
    @media (min-width: 1100px) {
      .dropcontent {
        margin-left: -45px;
      }

      #header_indhold {
        padding: 30px 90px 30px 90px;
      }
      #logo{
          aspect-ratio: 225/123;
          width: 100%;
          height: 100%;
      }
    }
  </style>

  <style>
    a {
    color: white;
    z-index: 21;
}
a:visited {
    color: white;
}
a:hover {
    color: var(--yellow);
}

/* off-screen-menu */
.off-screen-menu{
    max-width: 100px;
    position: fixed;
    right: -100px;
    display: flex;
    top:  20px;
    flex-direction: column;
    transition: .3s ease;
}

.off-screen-menu.active {
    top: 20px;
    right: 80px;
}

/* nav */
nav {
    padding: 1rem;
    display: flex;
}


/* ham menu */
.ham-menu {
    height: 50px;
    width: 40px;
    margin-left: auto;
    position: relative;
    cursor: pointer;
}
.ham-menu span {
    height: 5px;
    width: 100%;
    background-color: white;
    border-radius: 25px;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    transition: .3s ease;
}
.ham-menu span:nth-child(1) {
    top: 25%;
}
.ham-menu span:nth-child(3) {
    top: 75%;
}
.ham-menu.active span {
    background-color: white;
}
.ham-menu.active span:nth-child(1) {
    top: 50%;
    transform: translate(-50%, -50%) rotate(45deg);
}
.ham-menu.active span:nth-child(2) {
    opacity: 0;
}
.ham-menu.active span:nth-child(3) {
    top: 50%;
    transform: translate(-50%, -50%) rotate(-45deg);
}

@media (min-width: 1100px) {
.off-screen-menu{
    max-width: 100px;
    position: fixed;
    right: -450px;
    display: flex;
    top: 135px;
    flex-direction: column;
    transition: .3s ease;
}

.off-screen-menu.active {
    top: 113px;
    right: 45px;
}
}
  </style>
  
  <!-- BURGER MENU -->
  <script src="../js/burger.js"></script>