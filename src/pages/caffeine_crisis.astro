---
import "../style.css";
import LandingpageHeader from "../components/LandingpageHeader.astro";
import Card from "../components/Card.astro"
import Button from "../components/Button.astro"
import MainLayout from "../layouts/MainLayout.astro";
import GameCard from "../components/GameCard.astro";
---

<MainLayout title="Halloween Home" backgroundcolor="var(--white)">
	<LandingpageHeader imgsrc="/webp/caffeine/caffeine_bg.webp" >

	<div class="grid_5">
		<div></div>
		<div><img src="/webp/caffeine/alex.webp" alt=""></div>
		<div>
			<img src="/webp/caffeine/caffeine_logo.webp" alt="">
			<br><br>
			<Button variant="caffeine" text="Play" href="https://matildemona.itch.io/caffeine-crisis" target="_blank"></Button>
			<div class="flex_arrow">
				<div></div>
				<div>
					<a href="#main"><img class="arrowdown" src="/svg/caffeine_arrow.svg" alt="arrow down"></a>
				</div>
				<div></div>
			</div>
			
			
		</div>
		<div><img src="/webp/caffeine/zombie.webp" alt=""></div>
		<div></div>
	</div>
	</LandingpageHeader>
	<main id="main" class="spacer">
        <GameCard src1="webp/caffeine/caffeine1.webp" src2="webp/caffeine/caffeine2.webp" src3="webp/caffeine/caffeine3.webp" src4="webp/caffeine/caffeine4.webp" header="Caffeine Crisis" text="Caffeine Crisis is a 2D platformer, where the lack of coffee turns office employees into dangerous caffein-deprived zombies. You navigates through deadly levels of spikes, zombies, and roombas, to collect bolts and powerful abilities that will help you repair the coffee machines and save the day.">
			<div class="button_grid">
				<div></div>
				<div><Button variant="games" text="Play" href="https://matildemona.itch.io/caffeine-crisis" target="_blank"></Button>
				</div>
				<div></div>
			</div>
        </GameCard>
	</main>
</MainLayout>

<style>
.grid_5{
	display: grid;
	grid-template-columns:  1fr 2fr 4fr 2fr 1fr;
}
.flex_arrow{
	display: flex;
	justify-content: center;
}
@media (max-width: 1100px){
	.button_grid{
		display: grid;
		grid-template-columns: 1fr 1fr 1fr;;
	}
	.grid_5{
	display: grid;
	grid-template-columns:  1fr 3fr 6fr 3fr 1fr;
}
}
</style>