---
import "../style.css";
import LandingpageHeader from "../components/LandingpageHeader.astro";
import Card from "../components/Card.astro"
import Button from "../components/Button.astro"
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Contact">
	<LandingpageHeader imgsrc="contact_hero.webp" alt="Contact Background">
		<div class="grid_5">
			<div></div>
			<div>
				<h1>Get In Touch!</h1>
				<p>Don’t be afraid to reach out - <br>
					we don’t bite! 👀</p>
					<br>
					<p>DemonDaycareGames@gmail.com</p>
					<br>
					<p>Check up on your demons!</p>
					<div class="flex_some">
						<a style="margin-right: 10px" href="https://www.instagram.com/matildemona.exe/" target="”_blank”">
							<img
							class="some_logo"
							src="public/svg/some_instagram_white.svg"
							alt="instagram"
							/></a>
							<a
							href="https://matildemona.itch.io/"
							target="”_blank”">
							<img class="some_logo" src="public/svg/some_itch.svg" alt="instagram" /></a>
					</div>
			</div>
			<div class="space_mobile">
				<img src="public/webp/demon_round.webp" alt="">
			</div>
			<div></div>
		</div>
	</LandingpageHeader>
	<main>
		<div id="space_for_hero_contact"></div>
	</main>
</MainLayout>

<style>
	.grid_5{
	display: flex;
	flex-direction: column;
	text-align: left;
	padding-left: 40px;
	padding-right: 40px;
	margin-top: 40px;
}
.space_mobile{
	margin-top: 40px;
}
	.some_logo{
	display: inline;
	width: 12%;
}
p{
	font-size: 1.5rem;
}
#space_for_hero_contact{
margin-top: 20vh;
}

@media (min-width: 1100px) {
	.grid_5{
	display: grid;
	grid-template-columns:  1fr 1fr 1fr 1fr;
	text-align: left;
}
.space_mobile{
	margin-top: 0px;
}
}

</style>